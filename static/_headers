# Security Headers - Applied to all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-XSS-Protection: 1; mode=block
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://identity.netlify.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' blob: https://api.netlify.com https://*.netlify.com https://*.github.com https://api.github.com; frame-src https://www.google.com https://secure.dormproject.ch https://netlify-cdp-loader.netlify.app; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://api.netlify.com

# Cache static assets for 1 year (immutable)
/_app/immutable/*
  Cache-Control: public, max-age=31536000, immutable

/build/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year with revalidation
/images/*
  Cache-Control: public, max-age=31536000, s-maxage=31536000, stale-while-revalidate=86400

# Cache other static assets for 1 day
/*.svg
  Cache-Control: public, max-age=86400, s-maxage=86400

/*.txt
  Cache-Control: public, max-age=86400, s-maxage=86400

/*.xml
  Cache-Control: public, max-age=86400, s-maxage=86400

# Don't cache HTML pages (SvelteKit handles this)
/*.html
  Cache-Control: public, max-age=0, must-revalidate
